<table>
  <% book.book_comments.each do |book_comment| %>
  <tbody class="comment">
    <tr>
      <td class="avatar">
        <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size: "40x40"%>
        <%= link_to book_comment.user.name, user_path(user.id) %>
      </td>
      <td class="comment-author clearfix">
        <span class="comment-meta">
          <span class="comment-date"><%= book.created_at.strftime('%Y/%m/%d') %></span>
        </span>
      </td>
      <td class="comment-entry"><%= book_comment.comment %></td>
      <td>
        <% if book_comment.user == current_user%>
          <div>
            <%= link_to "削除", book_book_comments_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
          </div>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>