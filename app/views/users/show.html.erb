

<div class="body">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <%= render partial: 'sidemenu', locals: { user: @user, book: @book } %>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @user.books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "", fallback: "no_image.jpeg", size: "40x40" %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>