

<div class="body">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <%= render partial: 'template/sidemenu', locals: { user: @user, book: @book } %>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @user.books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "", fallback: "no_image.jpeg", size: "40x40" %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                <td>
                  <% if current_user.already_favorited?(book) %>
                    <%= link_to book_favorites_path(book), method: :delete do %>
                      <i class="fas fa-heart"></i>
                    <% end %>
                    <%= book.favorites.count %>
                    <% else %>
                    <%= link_to book_favorites_path(book), method: :post do %>
                      <i class="far fa-heart"></i>
                    <% end %>
                    <%= book.favorites.count %>
                  <% end %>
                </td>
                <td>
                  <i class="far fa-comments"></i>
                  <%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<h2>Your Map</h2>

<div id="map">
</div>

<style>
#map{
  height: 400px;
}
</style>



<script>
  
  function initMap(){
    var test = {lat: <%= @user.latitude %>, lng: <%= @user.longitude %>};
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 15,
      center: test
    });

    
    var marker = new google.maps.Marker({
      position: test,
      map: map,
    });
    

    marker.addListener('click', function(){
      infowindow.open(map, marker);
    });
  }
</script>


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDVUrrIPBR_xl1xlCeAmYCWPR6-SG2MLQA&callback=initMap" async defer></script>