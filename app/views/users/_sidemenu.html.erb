
<div class="col-xs-3">
  <h2>User info</h2>
  <div class="profile-container">
    <%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "", fallback: "no_image.jpeg", size: "100x100" %>
    <table class="table">
      <thead>
        <tr>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>name</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <% if user.id == current_user.id %>
        <p>
          <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_18309" %>
        </p>
      <% end %>
    </div>
  </div>
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= book.errors.count %>件のエラーが発生しました。</h2>
        <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <h4>Title</h4>
      <%= f.text_field :title, class:"col-xs-12" %>
    </div>
    <br>
    <div class="row">
      <h4>Opinion</h4>
      <%= f.text_area :body, class:"form-control col-xs-12", rows:"3" %>
    </div>
    <hr>
    <div class="row">
      <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
    </div>
  <% end %>
</div>






