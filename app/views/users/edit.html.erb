<body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
              <li><a class="glyphicon glyphicon-home home" href="/users/17873"> Home</a></li>
              <li><a class="glyphicon glyphicon-user users" href="/users"> Users</a></li>
              <li><a class="glyphicon glyphicon-book books" href="/books"> Books</a></li>
              <li><a class="glyphicon glyphicon-log-out logout" rel="nofollow" data-method="delete" href="/users/sign_out"> logout</a></li>
          </ul>
        </nav>
      </div>
    </header>

  	<div class="body">
      <div class="container">

        <p id="notice"></p>


      	<h2>User info</h2>


        <%= form_for(@user) do |f| %>
            <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputEmail">Name</label>
                <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
                <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
            </div>

            <div class="form-group has-icon">
                <div class="user-edit-image">
                  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                </div>
                <label class="control-label sr-only" for="inputEmail">Image</label>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
            </div>

            <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputEmail">Introduction</label>
                <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"user_introduction", placeholder:"Introduction"%>
                <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
            </div>
            <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>

          </div>
        </form>
      </div>
    </div>

    <footer>
