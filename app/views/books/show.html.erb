<div class="body">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <%= render partial: 'template/sidemenu', locals: { user: @user, book: @book } %>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', class: "", fallback: "no_image.jpeg", size: "40x40" %>
                <% end %>
                <br>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path, class: "btn-sm btn-success" %></td>
                <td>
                  <%= link_to 'Destroy', book_path(@book), {method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger" }%>
                </td>
              <% end %>
            </tr>
            <tr>
              <td>
                <% if current_user.already_favorited?(@book) %>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    <i class="fas fa-heart"></i>
                  <% end %>
                  <%= @book.favorites.count %>
                  <% else %>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    <i class="far fa-heart"></i>
                  <% end %>
                  <%= @book.favorites.count %>
                <% end %>
              </td>
              <td>
                <i class="far fa-comments"></i>
                <%= "#{@book.book_comments.count} コメント" %>
              </td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
        <table>
        <% @book.book_comments.each do |book_comment| %>
          <tbody class="comment">
            <tr>
              <td class="avatar">
                <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size: "40x40"%>
                <%= link_to book_comment.user.name, user_path(@user.id) %>
              </td>
              <td class="comment-author clearfix">
                <span class="comment-meta">
                  <span class="comment-date"><%= @book.created_at.strftime('%Y/%m/%d') %></span>
                </span>
              </td>
              <td class="comment-entry"><%= book_comment.comment %></td>
              <td>
                <% if book_comment.user == current_user%>
                  <div>
                    <%= link_to "削除", book_book_comments_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
                  </div>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
        </table>
        <%= form_for [@book, @book_comment] do |f| %>
          <div class="row">
              <div class="col-sm-12">
                  <%= f.text_area :comment, rows:'5', class: "form-control js-form-validate",placeholder: "コメントをここに" %>
              </div>
          </div>
          <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right form-submit js-disabled-submit" %>
          <%= javascript_include_tag "app.js" %>
        <% end %>
      </div>
    </div>
  </div>
</div>