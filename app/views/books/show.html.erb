<div class="body">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <%= render partial: 'users/sidemenu', locals: { user: @user, book: @book } %>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', class: "", fallback: "no_image.jpeg", size: "40x40" %>
                <% end %>
                <br>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path, class: "btn-sm btn-success" %></td>
                <td>
                  <%= link_to 'Destroy', book_path(@book), {method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger" }%>
                </td>
              <% end %>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>

        <% @book.book_comments.each do |book_comment| %>
          <li class="comment">
            <div class="comment-body bb">
              <div class="comment-avatar">
                <div class="avatar">
                  <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size: "40x40"%>
                </div>
              </div>
              <div class="comment-text">
                <div class="comment-author clearfix">
                  <a href="#" class="link-author"><%= book_comment.user.name %></a>
                  <span class="comment-meta">
                    <span class="comment-date"><%= @book.created_at.strftime('%Y/%m/%d') %></span>
                  </span>
                </div>
                <div class="comment-entry"><%= book_comment.comment %></div>
              </div>
            </div>
          </li>
        <% end %>
        
        <%= form_for [@book, @book_comment] do |f| %>
            <div class="row">
                <div class="col-sm-12">
                    <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
                </div>
            </div>
            <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>